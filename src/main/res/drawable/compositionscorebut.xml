<!-- custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#03A9F4" /> <!-- Background color when button is pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Default background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
</selector>
