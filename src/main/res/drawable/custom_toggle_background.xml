<!-- custom_toggle_background.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when toggle is off -->
    <item android:drawable="@drawable/toggle_off_background" android:state_checked="false" />

    <!-- Background when toggle is on -->
    <item android:drawable="@drawable/toggle_on_background" android:state_checked="true" />
</selector>
