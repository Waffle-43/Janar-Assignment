<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modes">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/modes4" />

    <TextView
        android:id="@+id/modesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modes"
        android:textSize="55sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/modesTitle">

        <Space
            android:layout_width="match_parent"
            android:layout_height="189dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:text="Comparison"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="Ordering "
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape2"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="Composition"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape3"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
